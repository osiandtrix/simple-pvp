{
  "name": "simple-pvp",
  "version": "1.0.0",
  "description": "Simple PvP Tool",
  "main": "./dist/main.js",
  "license": "MIT",
  "author": "osiandtrix",
  "scripts": {
    "build": "tsc --build",
    "watch": "nodemon --exec yarn serve:electron",
    "start": "yarn nightly:rename && concurrently -k \"yarn serve:front\" \"yarn watch\"",
    "front:setup": "cd frontend && yarn",
    "electron:setup": "yarn",
    "setup": "yarn front:setup && yarn electron:setup",
    "serve:front": "cd frontend && yarn dev",
    "serve:electron": "set APP_IS_NIGHTLY=yes && set APP_IS_DEV=yes && yarn build && wait-on tcp:3000 && electron .",
    "build:front": "cd frontend && yarn build",
    "electron:build": "yarn build",
    "electron:builder": "electron-builder --publish always",
    "app:build": "yarn prod:rename && yarn build:front && yarn electron:build && yarn electron:builder",
    "app:build:nightly": "set APP_IS_NIGHTLY=yes && set APP_IS_DEV=no && yarn nightly:rename && yarn build:front && yarn electron:build && yarn electron:builder",
    "nightly:rename": "json -I -f package.json -e \"this.name='simple-pvp'\" && json -I -f package.json -e \"this.build.productName='Simple PvP'\" && json -I -f package.json -e \"this.build.appId='com.simple-pvp.app'\"",
    "prod:rename": "json -I -f package.json -e \"this.name='simple-pvp'\" && json -I -f package.json -e \"this.build.productName='Simple PvP'\" && json -I -f package.json -e \"this.build.appId='com.simple-pvp.app'\"",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild",
    "sqlite-rebuild": "cd node_modules/better-sqlite3 && npm run build-release",
    "postinstall": "electron-builder install-app-deps",
    "up:win": "up_using_window.cmd"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.6",
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^9.2.1",
    "electron": "^22.0.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^3.2.0",
    "json": "^11.0.0",
    "nodemon": "^3.1.10",
    "typescript": "^4.9.4",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "cron": "^3.1.6",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "com.simple-pvp.app",
    "productName": "Simple PvP",
    "copyright": "Copyright Â© 2025 ${author}",
    "win": {
      "icon": "assets/app-logo.png",
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "osiandtrix"
      }
    ],
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      "defaults/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
